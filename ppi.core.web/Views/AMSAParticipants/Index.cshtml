@model IEnumerable<PPI.Core.Web.Models.AmsaReports.ViewModel.ParticipantListViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-box clearfix">
    <div class="main-box-body">

        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <h2>AMSA Participants</h2>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12">
                <a href="@Url.Action("Create","AMSAParticipants")" class="btn btn-primary btn200 pull-right mt20 ml20">
                    <i class="fa fa-plus-circle fa-lg"></i> Add Person
                </a>
                <a href="@Url.Action("Upload","AMSAParticipants")" class="btn btn-primary btn200 pull-right mt20">
                    <i class="fa fa-upload fa-lg"></i> Upload Participants
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                Search will go here
            </div>
            <div class="col-lg-6">
                Select list
            </div>
        </div>
        <br />
        <div>
            <table class="table table-responsive table-striped">
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Primary E-mail
                    </th>
                    <th>
                        Gender
                    </th>
                    
                    <th>
                        AMSA Code
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrimaryEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.AMSACode)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default">
                                Edit
                            </a>
                            <a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-primary" disabled>
                                Profile
                            </a>
                            <a href="@Url.Action("Delete", new { id=item.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you wish to delete?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
        </div></div>
@model IEnumerable<PPI.Core.Domain.Entities.Program>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-box clearfix">
    <div class="main-box-body">
        <div class="row">
            <h2 class="pull-left">Specialties</h2>
            <div class="form-group pull-right">
                <a href="@Url.Action("Create", "Program")" class="btn btn-primary btn200 pull-right mt20"><i class="fa fa-plus-circle fa-lg"></i> Add Specialty</a>                              
            </div>
        </div>
        <table class="table table-responsive">
            <tr>
                <th class="col-md-9">
                    @Html.DisplayName("SpecialtyName")
                </th>
                <th class="col-md-3"></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td style="font-size:12px;">
                    @Html.DisplayFor(modelItem => item.ProgramName)
                </td>
                <td>
                    <div class="groupbtn pull-right">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-sm btn60" })
                    <!--@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm btn60" })-->
                    @Html.ActionLink("Manage Departments", "IndexSite", new { @programid = item.Id }, new { @class = "btn btn-primary btn-sm btn150" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm btn60" })
                    </div>
                </td>
            </tr>
            }

        </table>
        </div>
    </div>

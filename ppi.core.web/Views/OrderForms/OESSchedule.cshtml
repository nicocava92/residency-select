@model PPI.Core.Web.Models.OESScheduleViewModel
@using PPI.Core.Web.HtmlHelpers
@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/_LayoutAdminOESSetup.cshtml";
}


<div class="main-box clearfix">
    <div class="main-box-body">
        <h2>Schedule</h2>
        <hr />
        @using (Html.BeginForm("OESSchedule", "OrderForms",FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()       
            @Html.HiddenFor(m => m.OESSetupId)            
            @Html.HiddenFor(m=>m.JetRequired)
            @Html.HiddenFor(m=>m.CompositeRequired)
            @Html.ValidationSummary(true)
            
            <div class="col-lg-12">
                    
                    <div class="col-md-6">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ReviewDate, "Event / Review Date", htmlAttributes: new { @class = "control-label col-md-5 bold" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(m => m.ReviewDate, new { @class = "form-control datepicker cursor_pointer", data_date_format = "mm-dd-yyyy" })
                                    <p class="text-danger">
                                        @Html.ValidationMessage("ReviewDateMessage")
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.StartDate, "Start Date", htmlAttributes: new { @class = "control-label col-md-5 bold" })
                                <div class="col-md-7">
                                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control datepicker cursor_pointer", data_date_format = "mm-dd-yyyy" } })
                                    <p class="text-danger">
                                        @Html.ValidationMessage("StartDateMessage")
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.EndDate, "End Date", htmlAttributes: new { @class = "control-label col-md-5 bold" })
                                <div class="col-md-7">
                                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control datepicker cursor_pointer", data_date_format = "mm-dd-yyyy" } })
                                    <p class="text-danger">
                                        @Html.ValidationMessage("EndDateMessage")
                                    </p>
                                </div>
                            </div>
                            @if (Model.JetRequired)
                            {
                                <div class="form-group">
                                    @Html.LabelFor(model => model.JETNeedByDate, "JET Need By Date", htmlAttributes: new { @class = "control-label col-md-5 bold" })
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.JETNeedByDate, new { htmlAttributes = new { @class = "form-control datepicker cursor_pointer", data_date_format = "mm-dd-yyyy" } })
                                        <p class="text-danger">
                                            @Html.ValidationMessage("JETNeedByDateMessage")
                                        </p>
                                    </div>
                                </div>
                            }
                            @if (Model.CompositeRequired)
                            {
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CompositeNeedByDate, "COMPOSITE Need By Date", htmlAttributes: new { @class = "control-label col-md-5 bold" })
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.CompositeNeedByDate, new { htmlAttributes = new { @class = "form-control datepicker cursor_pointer", data_date_format = "mm-dd-yyyy" } })
                                        <p class="text-danger">
                                            @Html.ValidationMessage("CompositeNeedByDateMessage")
                                        </p>
                                    </div>
                                </div>
                            }
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <a href="/OrderForms/OESSetup?ID=@Model.OESSetupId&isReadOnly=True" class="btn btn-default btn200 mobile_full_width_btn btn-text-gray" title="Previous"><span class="fa fa-caret-left" aria-hidden="true"></span> Previous</a>                                     
                                    <input type="submit" value="Next" class="btn btn-success btn200" />
                                </div>
                            </div>
                        </div>
                    </div>    
            </div>
        }
    </div>
</div>


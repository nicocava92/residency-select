@model IEnumerable<PPI.Core.Web.Models.AmsaReports.AMSACode>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-box clearfix">
    <div class="main-box-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h2>AMSA Codes</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-offset-8 col-md-offset-8 col-lg-2 col-md-2 col-sm-12">
                <a href="@Url.Action("Upload","AMSACodes")" class="btn btn-primary pull-right btn-block">
                    <i class="fa fa-upload fa-lg"></i> Upload Codes
                </a>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12">
                <a href="@Url.Action("Create","AMSACodes")" class="btn btn-primary pull-left btn-block">
                    <i class="fa fa-plus-circle fa-lg"></i> Add Code
                </a>
            </div>
        </div>
        <br />
        <div>
            <table class="table table-responsive table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Used)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @if (@item.Used)
                            {
                                <text>True</text>
                            }
                            else
                            {
                                <text>False</text>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-primary">
                                Details
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
</div>
</div>